{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Qdrant",
      "type": "shell",
      "command": "docker compose up -d --build",
      "args": ["qdrant"],
      "problemMatcher": {
        "owner": "docker",
        "pattern": {
          "regexp": "^(.*)$",
          "file": 1,
          "location": 2,
          "message": 3
        }
      },
      "runOptions": {
        "runOn": "folderOpen"
      },
      "presentation": {
        "reveal": "silent",
        "panel": "shared",
        "focus": false,
        "showReuseMessage": false,
        "clear": false
      },
      "options": {
        "shell": {
          "executable": "cmd.exe",
          "args": ["/c"]
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Stop Qdrant",
      "type": "shell",
      "command": "docker compose stop",
      "args": ["qdrant"],
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent",
        "panel": "shared",
        "focus": false,
        "showReuseMessage": false
      },
      "options": {
        "shell": {
          "executable": "cmd.exe",
          "args": ["/c"]
        }
      }
    },
    {
      "label": "Restart Qdrant",
      "type": "shell",
      "command": "docker compose restart",
      "args": ["qdrant"],
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent",
        "panel": "shared",
        "focus": false,
        "showReuseMessage": false
      },
      "options": {
        "shell": {
          "executable": "cmd.exe",
          "args": ["/c"]
        }
      }
    },
    {
      "label": "Qdrant Status",
      "type": "shell",
      "command": "docker compose ps",
      "args": ["qdrant"],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": false,
        "showReuseMessage": false
      },
      "options": {
        "shell": {
          "executable": "cmd.exe",
          "args": ["/c"]
        }
      }
    },
    {
      "label": "Qdrant Logs",
      "type": "shell",
      "command": "docker compose logs",
      "args": ["-f", "qdrant"],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": true,
        "showReuseMessage": false
      },
      "options": {
        "shell": {
          "executable": "cmd.exe",
          "args": ["/c"]
        }
      }
    }
  ]
}
